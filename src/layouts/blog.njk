{% extends 'base.njk' %}

{% block main %}

  {{ contents | safe }}

  <ul class="archive">
    {% for post in collections.posts %}
      {% if not post.draft %}
      <li class="archive__post">
        <div class="archive__title item-title">
          <a href="/{{ post.path }}/">
            {{ post.title }}
          </a>
        </div>
        <div class="archive__date">{{ post.date | date }}</div>
      </li>
      {% endif %}
    {% endfor %}
  </ul>

{% endblock %}
